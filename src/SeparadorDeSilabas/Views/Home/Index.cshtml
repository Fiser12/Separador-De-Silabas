@using ViewModel
@model TextoViewModel
@{
    ViewData["Title"] = "Home Page";
}
@using (Html.BeginForm())
{
    <div class="col-lg-12">

        <br />
        <br />
        <div class="col-lg-6 form-group has-feedback">
            @Html.TextBoxFor(m => Model.texto, new{ @class = "form-control" })
            @Html.ValidationMessageFor(m => Model.texto, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 form-group has-feedback">
            @Html.TextBoxFor(m => Model.col, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => Model.col, "", new { @class = "text-danger" })
        </div>
        <div class="form-group has-feedback">
            @foreach (var s in Model.textoProcesado)
            {
                <p>@s.ToString()</p>
            }
        </div>
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Enviar</button>
        </div>
    </div>
}